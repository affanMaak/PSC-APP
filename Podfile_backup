require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Disable modular headers globally
use_modular_headers! false

target 'PSC' do
  config = use_native_modules!
  
  # Add this flag to prevent Firebase issues
  ENV['RCT_NEW_ARCH_ENABLED'] = '0'
  
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false,
    :fabric_enabled => false,
    :flipper_configuration => FlipperConfiguration.disabled
  )
  
  # Explicitly define Firebase pods with modular headers enabled
  pod 'Firebase/Core', :modular_headers => true
  pod 'Firebase/Messaging', :modular_headers => true
  
  # If using other Firebase modules, add them similarly
  # pod 'Firebase/Auth', :modular_headers => true
  # pod 'Firebase/Firestore', :modular_headers => true
  
  post_install do |installer|
    react_native_post_install(installer)
    
    # Fix for M1/M2 Macs
    installer.pods_project.build_configurations.each do |config|
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
    end
    
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Set deployment target
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        
        # Disable warnings for Firebase
        config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
        
        # Fix for module conflicts
        config.build_settings['CLANG_MODULES_AUTOLINK'] = 'NO'
        config.build_settings['DEFINES_MODULE'] = 'NO'
        
        # Fix for ReactCommon conflicts
        if target.name.start_with?('React-')
          config.build_settings['DEFINES_MODULE'] = 'YES'
        end
        
        # Enable modular headers only for Firebase targets
        if target.name.include?('Firebase') || target.name.include?('RNFB')
          config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
          config.build_settings['DEFINES_MODULE'] = 'YES'
        end
      end
    end
  end
end